{
	"name": "BorrowSanitizer",
	"build": {
		"dockerfile": "Dockerfile",
		"target": "image-dev",
		        "context": ".."
			},
			"postCreateCommand": "apt-get update && apt-get install -y libasan8",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly,type=bind"
	],
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:${containerWorkspaceFolder}"
	},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"rust-lang.rust-analyzer",
				"ms-vscode.cpptools"
			]
		}
	}
}